<h2>Carted Product</h2>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h2>Your order: <%= @carted_products.first.order.user.name %></h2>
    <table class="table">
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price per Product</th>
       <!--  <th>Product Image</th> -->
      </tr>
      <% @carted_products.each do|carted_product|%>
      <tr>
        <td><%= carted_product.product.name %></td>
        <td><%= carted_product.quantity %></td>
        <td><%= carted_product.product.price %></td>
        <!-- <td><%= carted_product.product.images.first %></td> -->
      </tr>
      <% end %>
      <% form_tag%>
    </table>
  </div>
</div>
  








