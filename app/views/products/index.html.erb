<h1>All Products</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
    </tr>

      <% @products.each do |product| %>

        <tr>
            <td><a href="/products/<%= product.id %>"> <%= product.name %></a></td>
            <td>$<%= product.price %></td>
             <td><%= product.description %></td>
            <td><img src="<%= product.image %>"></td>
        </tr>
        
      <%end%>
      
  </table>

